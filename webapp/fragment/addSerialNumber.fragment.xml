<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog   contentHeight="500px" contentWidth="400px" showHeader="false" class="customerDialog" afterOpen=".onSerialDialogAfterOpen">
        <content>
        <VBox class="customScrollContainer" height="500px">
            <Table id="idSerNumber" items="{serialModel>/serials}" >
            <headerToolbar>
            <Toolbar >
            <content> 
            <Title level="H2" text="Serial Number" />
            <ToolbarSpacer/>
            <!-- <Button icon="sap-icon://decline" press="onPressCancelButton"/> -->
            </content>
            </Toolbar>
            
            </headerToolbar>
                <ColumnListItem id="serNumberColmnList" class="lstBackground">
			<cells>
				<Input value="{serialModel>serialNumber}" liveChange="onSerialInputChange" maxLength="25" class="inputStyle sapUiSmallMarginBottom" ></Input>
				
			</cells>
		</ColumnListItem>
		<columns>
			<Column >
				<header>
                    <!-- <Label design="Bold" text="Serial Number" /> -->
                </header>
			</Column>
		</columns>
            </Table>
             </VBox >
        </content>
        <beginButton>
            <Button id="saveSerialNumberBtn" text="Save" press="onSaveSerialNumber" class="cstmBtn"/>
             
        </beginButton>
        <endButton>
                  <Button text="Close" class="cstmBtn" press="onPressCancelButton"/>
        </endButton>
       
    </Dialog>
</core:FragmentDefinition>