<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog   contentHeight="400px" contentWidth="400px" showHeader="false">
        <content>
            <Table id="idSerNumber" items="{serialModel>/serials}">
            <headerToolbar>
            <Toolbar >
            <content> 
            <Title level="H2" text="Serial Number" />
            <ToolbarSpacer/>
            <Button icon="sap-icon://decline" press="onPressCancelButton"/>
            </content>
            </Toolbar>
            
            </headerToolbar>
                <ColumnListItem id="serNumberColmnList">
			<cells>
				<Input value="{serialModel>serialNumber}" maxLength="25" ></Input>
				
			</cells>
		</ColumnListItem>
		<columns>
			<Column >
				<header>
                    <!-- <Label design="Bold" text="Serial Number" /> -->
                </header>
			</Column>
		</columns>
            </Table>
        </content>
        <beginButton>
            <Button text="Save" press="onSaveSerialNumber" class="cstmBtn"/>
             
        </beginButton>
       
    </Dialog>
</core:FragmentDefinition>