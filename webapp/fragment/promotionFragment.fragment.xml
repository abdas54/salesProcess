<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
     <Dialog title="Promotions" contentHeight="1000px" contentWidth="1000px" class="sapUiSizeCompact discountDialog">
         <content>
         <VBox class="sapUiSmallMarginBottom">
    
 

        <Table
            items="{PromotionModel>/ZPM1}"
            inset="false"
            id="zpm1PromotionTbl"
            visible="{= ${PromotionModel>/ZPM1} ? ${PromotionModel>/ZPM1}.length > 0 : false }"
            class="sapUiSmallMarginBottom sapUiSmallMarginBegin sapUiSmallMarginTop sapUiSmallMarginEnd"
            mode="SingleSelectLeft"
            width="95%"
            selectionChange="onZPM1SelectionChange">
            <headerToolbar>
                        <OverflowToolbar>
                        <Title   text="{= 'ZPM1 - ' + ${PromotionModel>/ZPM1/0/ConditionName} }" level="H4" />
                            <ToolbarSpacer />
                           
                        </OverflowToolbar>
                    </headerToolbar>

            <columns>
                <Column>
                    <Text text="Material" />
                </Column>
                 <Column>
                    <Text text="Unit Price" />
                </Column>
                <Column>
                    <Text text="Discount" />
                </Column>
                 <Column>
                    <Text text="Promotion (%)" />
                </Column>
                 <Column>
                    <Text text="Promotion Discount" />
                </Column>
                <Column>
                    <Text text="Net Price" />
                </Column>
              
               
            </columns>

            <items>
                <ColumnListItem>
                    <cells>
                     <ObjectIdentifier title="{PromotionModel>Material}" text="{PromotionModel>MaterialDescription}"/>
                    <Text text="{PromotionModel>UnitPrice}" />
                     <Text text="{PromotionModel>Discount}" />
                        <Text text="{PromotionModel>PromotionPercent}" />
                       
                
                        <Text text="{PromotionModel>Promotion}" />
                         <Text text="{PromotionModel>NetPrice}" />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
   

 

        <Table
            items="{PromotionModel>/ZPM2}"
            inset="false"
            visible="{= ${PromotionModel>/ZPM2} ? ${PromotionModel>/ZPM2}.length > 0 : false }"
            id="zpm2PromotionTbl"
            class="sapUiSmallMarginBottom sapUiSmallMarginBegin sapUiSmallMarginEnd"
            mode="MultiSelect"
            width="95%"
            selectionChange="onZPM2SelectionChange">
            <headerToolbar>
                        <OverflowToolbar>
                         <Title text="{= 'ZPM2 - ' + ${PromotionModel>/ZPM2/0/ConditionName} }" level="H4" />
                            <ToolbarSpacer />
                           
                        </OverflowToolbar>
                    </headerToolbar>

            <columns>
                <Column>
                    <Text text="Material" />
                </Column>
                  <Column>
                    <Text text="Unit Price" />
                </Column>
                 <Column>
                    <Text text="Discount" />
                </Column>
                 <Column>
                    <Text text="Promotion (%)" />
                </Column>
                   <Column>
                    <Text text="Promotion Discount" />
                </Column>
                 <Column>
                    <Text text="Net Price" />
                </Column>
             
               
            </columns>

            <items>
                <ColumnListItem>
                    <cells>
                         <ObjectIdentifier title="{PromotionModel>Material}" text="{PromotionModel>MaterialDescription}"/>
                         <Text text="{PromotionModel>UnitPrice}" />
                          <Text text="{PromotionModel>Discount}" />
                             <Text text="{PromotionModel>PromotionPercent}" />
                                 <Text text="{PromotionModel>Promotion}" />
                        <Text text="{PromotionModel>NetPrice}" />
                     
                    
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    
  
         </VBox>
            </content>
            <beginButton>
			<Button text="Close" press="fnClosePromotion" class="cstmBtn"/>
		</beginButton>
        <endButton>
        <Button id="applyPromotionBtn" text="Apply" press="fnApplyPromotion" class="cstmBtn"/>
        </endButton>
            </Dialog>

</core:FragmentDefinition>
