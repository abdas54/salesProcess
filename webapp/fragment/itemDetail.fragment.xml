<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout">
<Dialog title="Item Detail Information" contentHeight="400px" contentWidth="1000px">
		<content >
  <!-- <VBox class="sapUiSmallMargin"> -->

 <l:Grid defaultSpan="XL3 L3 M12 S12" class="sapUiSmallMarginTop">
    <HBox>
      <VBox >
        <Label text="Location" />
         <Text text="{itemDataModel>/Location}" />
      </VBox>
    </HBox>

  
      <VBox >
        <Label text="Unit Discount" />
         <Text text="{itemDataModel>/UnitDiscount}" />
  </VBox>
  
    
      <VBox >
     <Label text="Gross Discount" />
         <Text text="{itemDataModel>/GrossDiscount}" />
 </VBox>
   
   
      <VBox >
    <Label text="VAT  Amount" />
         <Text text="{itemDataModel>/VatAmount}" />
    </VBox>
   
    </l:Grid>
    <l:Grid defaultSpan="XL3 L3 M12 S12">
   
      <VBox >
   
    <Label text="VAT  Percentage" />
        <Text text="{itemDataModel>/VatPercent}" />
 </VBox>
   
 
   
  </l:Grid>


  </content>
 
		<endButton>
			<Button text="Close" press="onCloseItemDetail" class="cstmBtn"/>
		</endButton>
  </Dialog>
</core:FragmentDefinition>
